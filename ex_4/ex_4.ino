//********** Variables ************************************************************
const int xiulet = 9;        // donar nom al pin 9 de lâ€™Arduino
int time1 = 500;
int durada= 20;
//********** Setup ****************************************************************
void setup()
{
  pinMode(xiulet, OUTPUT);   // definir el pin 9 com una sortida
}
//********** Loop *****************************************************************
void loop()
{
  delay(time1);
  tone(xiulet, 1000, durada);    
  tone(xiulet, 1250, durada); 
  delay(time1);   
}
